# How the test data was generated
## Generating the cohort vcfs:
bcftools view -O z ../1kGP_high_coverage_Illumina.chr1.filtered.SNV_INDEL_SV_phased_panel.vcf.gz chr1:50100000-50200000 -o 1kGP_phased_panel.chr1.vcf.gz
bcftools view -O z ../1kGP_high_coverage_Illumina.chr2.filtered.SNV_INDEL_SV_phased_panel.vcf.gz chr2:50100000-50200000 -o 1kGP_phased_panel.chr2.vcf.gz
bcftools index -t 1kGP_phased_panel.chr1.vcf.gz
bcftools index -t 1kGP_phased_panel.chr2.vcf.gz
## Generating the input vcf:
printf 'chr1\t13294000\t13444000\nchr2\t13294000\t13444000\nchrX\t13294000\t13444000\n' > regions.bed
bcftools view ../dv_013783-X0013-downsampled.ann.vcf.gz -R regions.bed -O z -o dv_013783-X0013.vcf.gz
bcftools index -t dv_013783-X0013.vcf.gz
## Generating the plink maps:
cat ../gmaps/plink.chr1.GRCh38.chr.map | awk '($4>=13290000 && $4<=13450000)' > plink.chr1.GRCh38.chr.map
cat ../gmaps/plink.chr2.GRCh38.chr.map | awk '($4>=13290000 && $4<=13450000)' > plink.chr2.GRCh38.chr.map
